{
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#282727", // Change this color code to your desired color
    "editorLineNumber.activeForeground": "#76946A", // Change this color code to your desired color
    "editor.background": "#181616",
    "titleBar.activeBackground": "#181616", // Background color of the active file menu
    "editorGutter.background": "#181616",
    "activityBar.background": "#181616", // Background color of the activity bar on the side
    "sideBar.background": "#181616", // Background color of the side bar
    "editorGroupHeader.tabsBackground": "#181616", // Background color of editor group tabs
    "statusBar.background": "#0D0C0C", // Background color of the status bar at the bottom
    "panel.background": "#181616",
    "scrollbarSlider.background": "#1F1F28",
    "sideBar.border": "#1F1F28",
    "editorCursor.background": "#0D0C0C"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/.venv": true,
    "**/node_modules": true
  },

  // Base Settings
  "terminal.integrated.defaultProfile.linux": "fish",
  "python.analysis.completeFunctionParens": true,

  // Vim Setup
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [{}],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["leader", "r", "n"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["leader", "r", "r"],
      "commands": ["references-view.findReferences"]
    },

    {
      "before": ["leader", "d", "f"],
      "commands": ["editor.action.formatDocument"]
    },

    // extras
    { "before": ["leader", "w"], "commands": [":w"] },
    { "before": ["leader", "q"], "commands": [":q"] },

    // switch b/w buffers
    { "before": ["<leader>", "j"], "commands": [":bprevious"] },
    { "before": ["<leader>", "k"], "commands": [":bnext"] },

    // splits
    {
      "before": ["s", "v"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["s", "h"],
      "commands": ["workbench.action.focusLeftGroup"]
    },
    {
      "before": ["s", "j"],
      "commands": ["workbench.action.focusBelowGroup"]
    },
    {
      "before": ["s", "k"],
      "commands": ["workbench.action.focusAboveGroup"]
    },
    {
      "before": ["s", "l"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<leader>", "g"],
      "commands": ["editor.action.commentLine"]
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["s", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["s", "a"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["s", "d"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["editor.action.startFindReplaceAction"]
    },
    {
      "before": ["<leader>", "z"],
      "commands": ["workbench.action.toggleZenMode"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["workbench.explorer.fileView.focus"]
    },
    {}
  ],

  // error lens
  "errorLens.messageBackgroundMode": "none",
  "errorLens.messageTemplate": "‚è∫ $message",
  "errorLens.gutterIconsEnabled": true,

  "window.menuBarVisibility": "hidden",
  "workbench.startupEditor": "none",
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.fontFamily": "'JetBrains Mono', 'monospace', monospace",
  "editor.lineNumbers": "relative",
  "editor.cursorBlinking": "solid",
  "editor.minimap.enabled": false,
  "editor.fontSize": 15,
  "editor.fontLigatures": true,
  "editor.overviewRulerBorder": false,

  // language specific
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": false
  },
  "git.openRepositoryInParentFolders": "never",
  "window.customMenuBarAltFocus": false,
  "code-runner.runInTerminal": true,
  "python.autoComplete.extraPaths": [],
  "python.analysis.extraPaths": [],
  "vsicons.dontShowNewVersionMessage": true,
  "editor.hover.enabled": false,
  "errorLens.messageEnabled": true,
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.folding": false,
  "workbench.sideBar.location": "right",
  "workbench.colorTheme": "poimandres",
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.activityBar.location": "top",
  "terminal.integrated.fontFamily": "'JetBrainsMono Nerd Font', 'monospace', monospace",
  "breadcrumbs.enabled": false,
  "editor.lightbulb.enabled": "off"
}
